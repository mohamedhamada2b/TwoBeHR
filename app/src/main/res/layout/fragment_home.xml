<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">
    <TextView
        android:id="@+id/txt_welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Welcome, Ahmed Geater"
        android:fontFamily="@font/almarai_regular"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="50dp"/>
    <DigitalClock
        android:id="@+id/digital_clock"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_user"
        android:textColor="@color/black"
        android:fontFamily="@font/almarai_bold"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almarai_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digital_clock"
        android:textSize="20dp"
        android:textColor="#BCBCBC"
        android:text="Monday, 23-6-2023"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:id="@+id/finger_print_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fingerprint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/location_txt"
        app:layout_constraintTop_toBottomOf="@+id/finger_print_img"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/location_img"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@+id/finger_print_img"
        android:text="Try To Check Location"
        android:fontFamily="@font/almarai_bold"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        android:layout_marginTop="40dp"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="location_txt,location_img" />
    <View
        android:id="@+id/view"
        android:layout_width="175dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barrier"
        android:background="@color/purple_500"
        android:layout_marginTop="3dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F5F5F5"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/txt_today_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/almarai_bold"
            android:text="Today Activity" />
        <ImageView
            android:id="@+id/time_check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/time_check_out"
            app:layout_constraintTop_toBottomOf="@+id/txt_today_activity"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:src="@drawable/time_check_in"
            android:background="#F5F5F5"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:id="@+id/time_check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/time_check_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@+id/txt_today_activity"
            android:src="@drawable/check_out"
            android:background="#F5F5F5"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/txt_check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_check_out"
            app:layout_constraintTop_toBottomOf="@+id/time_check_in"
            android:fontFamily="@font/almarai_bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txt_check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_check_in"
            app:layout_constraintTop_toBottomOf="@+id/time_check_in"
            android:fontFamily="@font/almarai_bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check in"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/check_out"
            app:layout_constraintTop_toBottomOf="@+id/txt_check_in"
            android:fontFamily="@font/almarai_bold"
            android:textSize="14sp"
            android:textColor="#202020"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check_in"
            app:layout_constraintTop_toBottomOf="@+id/txt_check_out"
            android:fontFamily="@font/almarai_bold"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>